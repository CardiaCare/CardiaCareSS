<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ru.cardiacare.cardiacare.hisdocuments.ResultsBlood"
    tools:showIn="@layout/activity_results_blood">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/account_activity_toolbar">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:text="@string/systolicPressure"
                android:id="@+id/SystolicPressure"
                android:padding="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etSystolicPressure"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:padding="8dp"
                android:enabled="false"
                android:textColor="#ffffff"
                android:editable="false"
                android:text="Ivanov Corporation"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:text="@string/diastolicPressure"
                android:id="@+id/DiastolicPressure"
                android:padding="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etDiastolicPressure"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:padding="8dp"
                android:enabled="false"
                android:textColor="#ffffff"
                android:editable="false"
                android:text="Ivanov Corporation"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:text="@string/pulse"
                android:id="@+id/Pulse"
                android:padding="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etPulse"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:padding="8dp"
                android:enabled="false"
                android:textColor="#ffffff"
                android:editable="false"
                android:text="Ivanov Corporation"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
